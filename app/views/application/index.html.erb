<% if @user_name.present? %>
Witaj <%= @name %>!
<% else %>
Witaj!
<% end %>
<br>
<div style="float: right">
<a href="/add" class="btn btn-primary my-2">Dodaj ogłoszenie</a>
</div>
<br><br>
<h1 class="cover-heading">Ogłoszenia</h1>
<div class="album py-5 bg-light">
        <div class="container">
          <div class="row">
<% @ads.each_with_index do |ad, index| %>

            <div class="col-md-4">
              <div class="card mb-4 shadow-sm">
                <span class="badge badge-info">Ogłoszenie: <%= (index+1) %></span>
                <img class="card-img-top" src="/img/<%= ad.id %>" alt="Advertisement image">
                <div class="card-body">
                	<p class="card-text"><%= ad.tytul %></p>
                  	<p class="card-text"><%= ad.opis %></p>
                	<p class="card-text">Kategoria: <%= ad.kategoria %></p>
                	<p class="card-text">Tel.: <%= ad.telefon %></p>
                	<p class="card-text">E-mail: <%= ad.email %></p>
                	<p class="card-text">Autor: <%= "#{ad.imie} #{ad.nazwisko}" %></p> 
                	<% if @user_name.present? %>
                  		<div class="d-flex justify-content-between align-items-center">
                  			<div class="btn-group">
								<a href="/edit/<%= ad.id %>" class="btn btn-sm btn-outline-secondary">Edytuj</a>
								<a href="/remove/<%= ad.id %>" class="btn btn-sm btn-outline-secondary">Usuń</a>
							</div>
                  		</div>
                  	<% end %>
                </div>
              </div>
            </div>
<% end %>
	Ilość ogłoszeń:&nbsp<span class="badge badge-pill badge-info">
		<span style="position: relative; top: 3px"><%= @ads.length %></span>
	</span>
		</div>
	</div>
</div>