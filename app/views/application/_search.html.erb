<div id="filterWrapper">
	<%= form_for :search, url: '/search' do |f| %>
  <div class="form-row align-items-center">
    <div class="col-auto">
    	<label for="phrase"><%= t('phrase') %>:</label>
    </div>
    <div class="col">
    	<%= f.text_field :phrase, size: 100, class: 'form-control mb-2', placeholder: 'search_placeholder', :value => @phrase %>
    </div>
    <div class="col-auto">
    	<label for="category"><%= t('category') %>:</label>
    </div>
	<div class="col-auto">
    	<%= f.select(:category, options_for_select([t('categories.all'), t('categories.online'), t('categories.stationary')]), {:selected => @category}, {:class => "form-control mb-2"}) %>
    </div>
    <div class="col-auto">
  		<input type="submit" value="<%= t('search') %>" name="commit" class="btn btn-primary mb-2">
    </div>
  </div>
<% end %>
</div>
