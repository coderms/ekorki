<div class="container">
<div class="row">
  <div class="col-sm-8">
  	<h1 class="cover-heading"><%= @ogloszenie.tytul %></h1>
	<img src="/img/<%= @ogloszenie.id %>" class="ad_image">
	<p><strong><%= t('autor') %>:</strong> <%= "#{@ogloszenie.imie} #{@ogloszenie.nazwisko}" %></p>
	<p><strong><%= t('category') %>:</strong> <%= @ogloszenie.kategoria %></p>
	<p><strong><%= t('form.view.email') %>:</strong> <%= @ogloszenie.email %></p>
	<p><strong><%= t('form.view.desc') %>:</strong> <%= @ogloszenie.opis %></p>
	<p><strong><%= t('form.view.phone') %>:</strong> <%= @ogloszenie.telefon %></p>
	<%= link_to t('back'), {controller: "application", action: "index"}, class: "btn btn-primary my-2" %>
  </div>
  <div class="col-sm-4">
  	<h4 class="cover-heading"><%= t('form.view.message_title') %>:</h4>
  		<%= form_for :message, url: '/user_message' do |f| %>
  <div class="form-row align-items-center">
	<div class="col-auto">
    	<%= f.text_area :message, cols: 20, rows: 8, placeholder: t('form.view.message_placeholder'), class: "form-control mb-2" %>
			<%= f.email_field :viewer_email, size: 50, placeholder: 'E-mail', class: "form-control mb-2" %>
    	<%= f.hidden_field :id, value: @ogloszenie.id %>
  		<h4 class="cover-heading"><%= t('date.select_avail') %>:</h4>
    	<p><%= t('date.days') %>:</p>
    	<div class="row">
  			<div class="col-7"><%= f.check_box :pon, {}, true, false %> <%= t('date.mondays') %></div>
  			<div class="col"><%= f.check_box :wt, {}, true, false %> <%= t('date.tuesdays') %></div>
		  </div>
    	<div class="row">
  			<div class="col-7"><%= f.check_box :sr, {}, true, false %> <%= t('date.wednesdays') %></div>
  			<div class="col"><%= f.check_box :czw, {}, true, false %><%= t('date.thursdays') %></div>
	  	</div>
    	<div class="row">
  			<div class="col-7"><%= f.check_box :pt, {}, true, false %> <%= t('date.fridays') %></div>
  			<div class="col"><%= f.check_box :sob, {}, true, false %> <%= t('date.saturdays') %></div>
		  </div>
    	<div class="row">
  			<div class="col-7"><%= f.check_box :nie, {}, true, false %> <%= t('date.sundays') %></div>
  			<div class="col"></div>
		  </div>
		<br>
		<p><%= t('date.hours') %>:</p>
    	<div class="row">
  			<div class="col"><%= f.check_box :rano, {}, true, false %> 8:00 - 12:00</div>
		  </div>
    	<div class="row">
  			<div class="col"><%= f.check_box :poludnie, {}, true, false %> 12:00 - 16:00</div>
		  </div>
    	<div class="row">
  			<div class="col"><%= f.check_box :wieczor, {}, true, false  %> 16:00 - 20:00</div>
		  </div>
    </div>
  </div>
  <br>
  <div class="form-row align-items-center">
    <div class="col-auto">
  		<input type="submit" value="<%= t('form.view.send') %>" name="commit" class="btn btn-secondary mb-2">
    </div>
  </div>
<% end %>
  </div>
</div>
</div>
